# vim:set nowrap:
# vim:set syntax=sh:

:params

   set env VOL=%1
   set env FNAM=%2

   if "%VOL%" == "" goto usage
   if "%FNAM%" == "" goto usage

   if "%VOL%" == "dsc3" goto badvol
   if "%VOL%" == "DSC3" goto badvol
   if "%VOL%" == "dsk3" goto badvol
   if "%VOL%" == "DSK3" goto badvol

   if exist "%FNAM%" goto trample

:automate

   attach -n dm1 %FNAM%
   expect "\r\n*" send "mark dsc3,off\r";c
   expect "\r\n*" send "load fastchek\r";c
   expect "TSKID = FASTCHEK" send "start ,init=dsc3:,vol=%VOL%,li=con:\r";c
   expect "FASTCHEK:END OF TASK" send "mark dsc3:,on\r";c
   send "\r"
   continue
   goto bottom

:usage

   echof ""
   echof " Usage: sim> do makedisk VOLUME FILENAME"
   echof ""
   echof " Note:  VOLUME is the volume label, e.g. IUG (four chars max)."
   echof "        FILENAME is a file on the host."
   echof ""
   echof " Note:  Do not confuse volume label with device name. If you use"
   echof "        something like DSC3 as the volume label, you will not be"
   echof "        able to mark it on."
   echof ""
   goto bottom

:trample

   echof "\n"
   echof "ERROR: File %FNAM% already exists. You don't want to trample on it."
   echof "\n"
   goto bottom

:badvol

   echof "\n"
   echof "ERROR: you can't use DSC3 as the volume label\n"
   echof "\n"

:bottom

